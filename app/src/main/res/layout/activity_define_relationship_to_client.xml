<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DefineRelationshipToClient">

    <EditText
        android:id="@+id/relationshipToClient"
        android:layout_width="217dp"
        android:layout_height="62dp"
        android:layout_marginTop="286dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/relationshipToClientLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="42dp"
        android:labelFor="@id/relationshipToClient"
        android:text="@string/agent_relationship_to_buyer"
        app:layout_constraintBottom_toTopOf="@+id/relationshipToClient"
        app:layout_constraintStart_toStartOf="@+id/relationshipToClient" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="86dp"
        android:onClick="getMarketArea"
        android:text="@string/agent_client_relationship_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relationshipToClient" />

</androidx.constraintlayout.widget.ConstraintLayout>