<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectBuyerAddress">

    <TextView
        android:id="@+id/buyerStreetAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="17dp"
        android:labelFor="@id/buyerStreetAddress"
        android:text="@string/buyer_address_street_address"
        app:layout_constraintBottom_toBottomOf="@+id/buyerStreetAddress"
        app:layout_constraintEnd_toStartOf="@+id/buyerStreetAddress"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/buyerCityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="69dp"
        android:labelFor="@id/buyerCity"
        android:text="@string/buyer_address_city"
        app:layout_constraintBaseline_toBaselineOf="@+id/buyerCity"
        app:layout_constraintEnd_toStartOf="@+id/buyerCity"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/buyerState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/buyerZipCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buyerStateLabel"
        app:layout_constraintTop_toBottomOf="@+id/buyerCity" />

    <EditText
        android:id="@+id/buyerCity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/buyerState"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buyerCityLabel"
        app:layout_constraintTop_toBottomOf="@+id/buyerStreetAddress" />

    <EditText
        android:id="@+id/buyerStreetAddress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/buyerCity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buyerStreetAddressLabel"
        app:layout_constraintTop_toBottomOf="@+id/buyerAddressTitle" />

    <EditText
        android:id="@+id/buyerZipCode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buyerZipCodeLabel"
        app:layout_constraintTop_toBottomOf="@+id/buyerState" />

    <TextView
        android:id="@+id/buyerStateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="60dp"
        android:labelFor="@id/buyerState"
        android:text="@string/buyer_address_state"
        app:layout_constraintBaseline_toBaselineOf="@+id/buyerState"
        app:layout_constraintEnd_toStartOf="@+id/buyerState"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/buyerZipCodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="37dp"
        android:labelFor="@id/buyerZipCode"
        android:text="@string/buyer_address_zip"
        app:layout_constraintBaseline_toBaselineOf="@+id/buyerZipCode"
        app:layout_constraintEnd_toStartOf="@+id/buyerZipCode"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/buyerAddressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="69dp"
        android:text="@string/buyer_address_title"
        app:layout_constraintBottom_toTopOf="@+id/buyerStreetAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="104dp"
        android:onClick="isThereClientRelationship"
        android:text="@string/buyer_next_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buyerZipCode" />
</androidx.constraintlayout.widget.ConstraintLayout>