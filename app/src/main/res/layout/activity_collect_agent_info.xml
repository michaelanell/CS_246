<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectAgentInfo">

    <EditText
        android:id="@+id/agentFirstName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="62dp"
        android:ems="10"
        android:hint="@string/agent_name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/agentEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section1Title" />

    <EditText
        android:id="@+id/agentEmail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="@string/agent_email"
        app:layout_constraintBottom_toTopOf="@+id/agentLicenseNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agentFirstName" />

    <Button
        android:id="@+id/action2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="127dp"
        android:onClick="collectBrokerageInfo"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agentLicenseNum" />

    <EditText
        android:id="@+id/agentLicenseNum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="@string/agent_license_number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/action2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agentEmail" />

    <TextView
        android:id="@+id/section1Title"
        android:layout_width="212dp"
        android:layout_height="0dp"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="45dp"
        android:labelFor="@+id/section1Title"
        android:text="@string/gai_section_1_title"
        app:layout_constraintBottom_toTopOf="@+id/agentFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>