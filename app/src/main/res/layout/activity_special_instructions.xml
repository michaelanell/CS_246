<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecialInstructions">

    <EditText
        android:id="@+id/specialInstructionsInput"
        android:layout_width="252dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/specialInstructionsNextButton"
        app:layout_constraintEnd_toEndOf="@+id/specialInstructionsLabel"
        app:layout_constraintTop_toBottomOf="@+id/specialInstructionsLabel" />

    <TextView
        android:id="@+id/specialInstructionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:layout_marginBottom="35dp"
        android:text="@string/special_instructions"
        app:layout_constraintBottom_toTopOf="@+id/specialInstructionsLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/specialInstructionsLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="40dp"
        android:labelFor="@id/specialInstructionsInput"
        android:text="@string/special_instructions_explanation"
        app:layout_constraintBottom_toTopOf="@+id/specialInstructionsInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specialInstructionsTitle" />

    <Button
        android:id="@+id/specialInstructionsNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="211dp"
        android:text="@string/special_instructions_next_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specialInstructionsInput" />
</androidx.constraintlayout.widget.ConstraintLayout>